@echo off
chcp 65001 >nul
echo ========================================
echo    Поиск Wi-Fi повторителя
echo ========================================
echo.

cd /d "%~dp0.."
call .venv\Scripts\activate.bat

echo Поиск повторителя в различных сетях...
echo.

REM 1. Сканируем основную сеть со всеми портами
echo [1/4] Сканирую 192.168.1.0/24 со всеми портами...
network-scanner --network 192.168.1.0/24 --ports 80,81,82,443,8080,8081,8443,8888,8000,8001,9000 --save

REM 2. Проверяем другие популярные подсети
echo [2/4] Сканирую 192.168.0.0/24...
network-scanner --network 192.168.0.0/24 --save

echo [3/4] Сканирую 10.0.0.0/24...
network-scanner --network 10.0.0.0/24 --save

echo [4/4] Сканирую 172.16.0.0/24...
network-scanner --network 172.16.0.0/24 --save

echo.
echo ========================================
echo Поиск завершен!
echo Проверьте папку results/ для результатов
echo ========================================
echo.
pause